<script>
document.addEventListener("DOMContentLoaded", function() {

    // Kunwari session variable na ginagamit mo
    var isLoggedIn = "@(Context.Session.GetString("Phone") != null ? "true" : "false")" === "true";

    const addToCartBtns = document.querySelectorAll(".add-to-cart-btn");
    const orderBtns = document.querySelectorAll(".order-btn");

    if (!isLoggedIn) {
        // Guest → hide Add to Cart
        addToCartBtns.forEach(btn => btn.style.display = "none");

        // Guest → Order Now redirects to Signin
        orderBtns.forEach(btn => {
            btn.style.display = "block"; // siguraduhing nakikita
            btn.addEventListener("click", function() {
                window.location.href = "/Home/Signin"; // redirect sa signin
            });
        });
    } else {
        // Logged-in → show both buttons
        addToCartBtns.forEach(btn => btn.style.display = "block");
        orderBtns.forEach(btn => btn.style.display = "block");
    }

});
</script>




