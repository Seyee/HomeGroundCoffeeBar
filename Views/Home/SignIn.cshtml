@{
    Layout = null;
    ViewData["Title"] = "Sign In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/img/icon.png" />
    <link rel="stylesheet" href="~/css/signin.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="signin-container">
        <div class="header">
            <h1 class="signin-title">Sign in</h1>
            <p class="signin-subtitle">Welcome to Where Coffee Feels Like Home</p>

            <button class="google-btn">
                <svg class="google-icon" viewBox="0 0 24 24" width="20" height="20">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <a href="/Account/GoogleLogin" class="btn btn-google">
                    Use Google Account
                </a>
            </button>

            <div class="divider">
                <span>or</span>
            </div>
        </div>
        
        <div class="signin-box-container">
            <div class="signin-box">
                <form id="signinForm" class="signin-form" method="post" action="/Account/Signin">

                    <div class="form-group">
                        <label for="Phone">Phone Number</label>
                        <input type="tel" id="phone" name="Phone" pattern="[0-9]{11}" maxlength="11" required />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="Password" required />
                    </div>
                </form>
            </div>

            <div class="sign-in-btn" >
                <button form="signinForm" type="submit" class="signin-btn">Brew Me In</button>
                <p class="signup-link">Don't have an account? <a href="/Home/Signup">Sign up</a>
            </div>
        </div>
    </div>

    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const errorMessage = "@TempData["ErrorMessage"]";

        if (errorMessage && errorMessage !== "") {
        Swal.fire({
            icon: "error",
            title: "Oops...",
            text: errorMessage,
            confirmButtonColor: "#7066E0",
            background: "#FFFFFF",
            color: "#000000"
        });
        }
    });
    </script>

</body>
</html>